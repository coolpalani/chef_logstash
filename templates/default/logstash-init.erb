#!/bin/bash
#
# Logstash init script for <%= @name %>
# The chef_logstash cookbook manages me.

case "$1" in

  start)
  echo "Starting <%= @name %>: "
  su - <%= @user %> -c "java -jar <%= @jar_path %> <%= @service_options %> agent -f <%= @conf_dir %>/<%= @name%>.conf"
  echo "OK"
  ;;

  stop)
  echo "Stopping <%= @name %>"
  echo "OK"
  ;;

  status)
  echo "Status <%= @name %>"
  ;;

  echo "Usage $0 start|stop|status"
  exit 1
esac
exit 0
